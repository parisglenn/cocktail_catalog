<div class="row-fluid">

<div class="span6">
		<h1>
			Featured Cocktail
		</h1>
	    <%= render partial: 'cocktails/list_cocktail', locals: {cocktail: @cocktail, no_ingredient_filter: @no_ingredient_filter, active_filters: @active_filters } %> 
	</div>




 <div class="span6">

		<h1>
			Featured Ingredient
		</h1>
	    <%= link_to @ingredient.name, @ingredient %> 
</div>

</div>

<div class="row-fluid">

 <div class="span9">

  <%= render partial: 'ingredients/shared_heirarchy', locals: {shared_ingredient_heirarchy: @shared_ingredient_heirarchy, no_ingredient_filter: @no_ingredient_filter, no_ingredient_type_filter: @no_ingredient_type_filter, no_ingredient_family_filter: @no_ingredient_family_filter, active_filters: @active_filters, no_ingredient_modification_filter: @no_ingredient_modification_filter, ingredient_modifications: @ingredient_modifications, ingredient_families: @ingredient_families} %>
</div>
  <div class="span3">
    <h3> Modifications (<%= @ingredient_modifications.count%>) </h3>
    <ul>
      <% @ingredient_modifications.sort{|a,b| a.name <=> b.name}.each do |im| %>
        <li> <%= link_to im.name, im %>
          <% unless @no_ingredient_modification_filter %>
                <i class="icon-filter" onclick="cocktailFilter('ingredient_modification_filter',<%=im.id%>)"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>



<!-- if index % 4 is 0, end current row, then start a new row -->

<footer class="footer">
		<%= link_to 'Ingredient types', ingredient_types_path %> |
		<%= link_to 'Ingredient families', ingredient_families_path %> |
		<%= link_to 'Ingredient categories', ingredient_categories_path %> |
		<%= link_to 'Ingredient modifications', ingredient_modifications_path %> |
		<%= link_to 'Glasses', glasses_path %> |
		<%= link_to 'Sources', cocktail_sources_path %> |
		<%= link_to 'Tags', tags_path %> 
</footer>