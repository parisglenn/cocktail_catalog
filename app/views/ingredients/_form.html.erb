<%= form_for(@ingredient) do |f| %>
  <% if @ingredient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ingredient.errors.count, "error") %> prohibited this ingredient from being saved:</h2>

      <ul>
      <% @ingredient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :ingredient_type_id %><br>
    <%= f.select :ingredient_type_id, options_for_select(@ingredient_type_dropdown, @ingredient.ingredient_type_id), {}, class: 'chosen-select' %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :brand %><br>
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :make %><br>
    <%= f.text_field :make %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <input type="hidden" value="<%=@div%>" id="div" name="div">
  <div class="actions">
    <%= f.submit onclick: 'handleNewForm();'%>
  </div>
<% end %>

<script>
  $(function(){
    $(".chosen-select").chosen()
    $(".chosen-select").trigger("chosen:updated");
    $('.chosen-container').css({"width": "300px"});
  });
</script>
