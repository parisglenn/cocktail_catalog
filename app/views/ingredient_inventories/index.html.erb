<h1>Listing ingredient_inventories</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Ingredient</th>
      <th>Amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_inventories.each do |ingredient_inventory| %>
      <tr>
        <td><%= ingredient_inventory.user_id %></td>
        <td><%= ingredient_inventory.ingredient_id %></td>
        <td><%= ingredient_inventory.amount %></td>
        <td><%= link_to 'Show', ingredient_inventory %></td>
        <td><%= link_to 'Edit', edit_ingredient_inventory_path(ingredient_inventory) %></td>
        <td><%= link_to 'Destroy', ingredient_inventory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

