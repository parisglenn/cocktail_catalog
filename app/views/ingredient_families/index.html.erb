<h1>Listing ingredient_families</h1>

<%= link_to 'New Ingredient family', new_ingredient_family_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_families.each do |ingredient_family| %>
      <tr>
        <td><%= link_to ingredient_family.name, ingredient_family %></td>
        <td><%= link_to ingredient_family.ingredient_category.name, ingredient_family.ingredient_category %></td>
        <td><%= link_to 'Destroy', ingredient_family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
